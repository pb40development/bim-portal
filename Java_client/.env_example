# BIM Portal API Credentials and Configuration
# Copy this file to .env in your project root and fill in your credentials

# === Required Credentials ===
BIM_PORTAL_USERNAME=your_username_here
BIM_PORTAL_PASSWORD=your_password_here

# === Logging Configuration ===
# Main log level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG # Set to DEBUG for detailed logging during development


# === API Configuration ===
# Choose your environment: Production or Education
BIM_PORTAL_BASE_URL=https://via.bund.de/bmdv/bim-portal/edu/bim  # Education environment -> for hackathon
# BIM_PORTAL_BASE_URL=https://via.bund.de/bim                    # Production environment

# === Timeout Configuration ===
REQUEST_TIMEOUT=60
CONNECT_TIMEOUT=10
MAX_RETRIES=3

# === Authentication Configuration ===
AUTH_RETRY_LIMIT=1
TOKEN_REFRESH_MARGIN_MINUTES=5
MAX_PROJECTS_TO_TEST=10

# === Export Configuration ===
EXPORT_DIRECTORY=exports
EXPORT_CLEANUP_DAYS=30

# === HTTP Client Configuration ===
VERIFY_SSL=true
FOLLOW_REDIRECTS=true



# Third-party library log levels (optional fine-tuning)
FEIGN_LOG_LEVEL=WARN
OKHTTP_LOG_LEVEL=WARN
JACKSON_LOG_LEVEL=WARN
SPRING_WEB_LOG_LEVEL=WARN
SPRING_SECURITY_LOG_LEVEL=WARN
SPRING_BOOT_LOG_LEVEL=WARN
SPRING_CONTEXT_LOG_LEVEL=WARN

# === Spring Boot Configuration ===
SERVER_PORT=8080
CONTEXT_PATH=/
SPRING_PROFILES_ACTIVE=default

# === Actuator/Monitoring Configuration ===
ACTUATOR_ENABLED=false
HEALTH_ENDPOINT_ENABLED=true
INFO_ENDPOINT_ENABLED=true
